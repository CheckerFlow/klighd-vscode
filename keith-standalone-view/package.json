{
  "name": "@kieler/keith-standalone-view",
  "version": "0.1.0",
  "description": "Standalone web view for keith-sprotty diagrams",
  "author": "Kiel University <rt-kieler-devel@informatik.uni-kiel.de>",
  "license": "EPL-1.0",
  "keywords": [
    "sprotty",
    "keith",
    "diagram",
    "standalone"
  ],
  "scripts": {
    "prepare": "yarn run clean && run-p --print-label \"build:*\"",
    "clean": "rimraf lib && rimraf dist",
    "lint": "tslint -c ./tslint.json --project ./tsconfig.json",
    "build:app": "webpack --mode=\"production\" && tsc --noEmit -p ./tsconfig.web.json",
    "build:server": "tsc -p ./tsconfig.server.json",
    "watch": "run-p --print-label \"watch:*\"",
    "watch:app": "webpack --watch --mode=\"development\"",
    "watch:server": "tsc -w -p ./tsconfig.server.json",
    "start": "node ./lib/server.js",
    "socket": "node ./lib/server.js --LSP_PORT=5007"
  },
  "dependencies": {
    "@kieler/keith-sprotty": "0.1.0",
    "fastify": "^3.15.0",
    "fastify-static": "^4.0.1",
    "fastify-websocket": "^3.1.0",
    "pino-pretty": "^4.7.1",
    "vscode-languageserver-protocol": "^3.16.0",
    "vscode-ws-jsonrpc": "^0.2.0"
  },
  "files": [
    "lib"
  ],
  "devDependencies": {
    "html-webpack-plugin": "4",
    "npm-run-all": "^4.1.5",
    "ts-loader": "^8.2.0",
    "webpack": "^4.44.1"
  }
}
