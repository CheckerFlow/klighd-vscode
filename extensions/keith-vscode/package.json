{
    "name": "keith-vscode",
    "displayName": "KEITH VSCode",
    "description": "KIEL Environment Integrated in VSCode",
    "version": "0.0.1",
    "publisher": "kieler",
    "license": "EPL-1.0",
    "engines": {
        "vscode": "^1.56.0"
    },
    "categories": [
        "Programming Languages",
        "Other"
    ],
    "activationEvents": [
        "onCommand:keith-vscode.helloWorld",
        "onLanguage:sctx"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "sctx",
                "configuration": "./language-configs/sccharts-configuration.json",
                "aliases": [
                    "SCCharts"
                ],
                "extensions": [
                    ".sctx"
                ]
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "when": "resourceLangId == sctx",
                    "command": "klighd-diagram.diagram.open",
                    "group": "navigation"
                }
            ]
        },
        "commands": []
    },
    "extensionDependencies": [
        "kieler.klighd-diagram"
    ],
    "scripts": {
        "prepare": "yarn run clean && yarn run compile",
        "clean": "rimraf out",
        "vscode:prepublish": "yarn run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "lint": "eslint src --ext ts"
    },
    "devDependencies": {
        "@types/vscode": "^1.56.0",
        "@types/node": "^12.11.7",
        "eslint": "^7.19.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "typescript": "^4.1.3",
        "ts-loader": "^8.0.14",
        "webpack": "^5.19.0"
    },
    "dependencies": {
        "vscode-languageclient": "^5.2.1"
    }
}
