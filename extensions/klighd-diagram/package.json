{
    "name": "klighd-diagram",
    "displayName": "KLighD Diagram",
    "description": "KLighD diagram support in VSCode",
    "version": "0.0.1",
    "publisher": "kieler",
    "author": "Kiel University <rt-kieler-devel@informatik.uni-kiel.de>",
    "icon": "icon.png",
    "license": "EPL-1.0",
    "repository": {
        "type": "git",
        "url": "https://git.rtsys.informatik.uni-kiel.de/projects/KIELER/repos/keith",
        "directory": "extensions/klighd-diagram"
    },
    "homepage": "https://rtsys.informatik.uni-kiel.de/kieler",
    "engines": {
        "vscode": "^1.56.0"
    },
    "categories": [
        "Visualization",
        "Other"
    ],
    "activationEvents": [
        "onCommand:klighd-diagram.setLanguageClient"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "klighd-diagram.diagram.open",
                "title": "Open in Diagram",
                "icon": "$(symbol-structure)",
                "category": "KLighD Diagram"
            },
            {
                "command": "klighd-diagram.diagram.fit",
                "title": "Fit diagram to screen",
                "icon": "$(move)",
                "category": "KLighD Diagram"
            },
            {
                "command": "klighd-diagram.diagram.center",
                "title": "Center diagram selection",
                "icon": "$(location)",
                "category": "KLighD Diagram"
            },
            {
                "command": "klighd-diagram.diagram.export",
                "title": "Export diagram to SVG",
                "icon": "$(clone)",
                "category": "KLighD Diagram"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "when": "false",
                    "command": "klighd-diagram.diagram.open"
                },
                {
                    "when": "keith-diagram-focused",
                    "command": "klighd-diagram.diagram.fit"
                },
                {
                    "when": "keith-diagram-focused",
                    "command": "klighd-diagram.diagram.center"
                },
                {
                    "when": "keith-diagram-focused",
                    "command": "klighd-diagram.diagram.export"
                }
            ],
            "editor/title": [
                {
                    "when": "keith-diagram-focused",
                    "command": "klighd-diagram.diagram.fit",
                    "group": "navigation"
                },
                {
                    "when": "keith-diagram-focused",
                    "command": "klighd-diagram.diagram.center",
                    "group": "navigation"
                },
                {
                    "when": "keith-diagram-focused",
                    "command": "klighd-diagram.diagram.export",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "prepare": "yarn run clean && yarn run compile",
        "clean": "rimraf out",
        "vscode:prepublish": "yarn run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "lint": "eslint src --ext ts"
    },
    "devDependencies": {
        "@types/vscode": "^1.56.0",
        "@types/node": "^12.11.7",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "css-loader": "^5.2.4",
        "eslint": "^7.19.0",
        "style-loader": "2.0.0",
        "typescript": "^4.1.3",
        "ts-loader": "^8.0.14",
        "vsce": "1.88.0",
        "webpack": "^5.19.0"
    },
    "dependencies": {
        "@kieler/keith-sprotty": "0.1.0",
        "inversify": "5.0.1",
        "reflect-metadata": "^0.1.13",
        "sprotty": "0.9.0",
        "sprotty-vscode": "^0.1.3",
        "sprotty-vscode-webview": "^0.1.2",
        "vscode-languageclient": "^5.2.1"
    }
}
