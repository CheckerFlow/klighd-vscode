{
    "name": "klighd-diagram",
    "displayName": "KLighD Diagram",
    "description": "KLighD diagram support in VSCode",
    "version": "0.0.1",
    "publisher": "kieler",
    "license": "EPL-1.0",
    "engines": {
        "vscode": "^1.56.0"
    },
    "categories": [
        "Visualization",
        "Other"
    ],
    "activationEvents": [
        "onCommand:klighd-diagram.setLanguageClient"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "klighd-diagram.showDiagram",
                "title": "Open in Diagram",
                "icon": "$(symbol-structure)",
                "category": "KLighD Diagram"
            }
        ]
    },
    "scripts": {
        "prepare": "yarn run clean && yarn run compile",
        "clean": "rimraf out",
        "vscode:prepublish": "yarn run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "lint": "eslint src --ext ts"
    },
    "devDependencies": {
        "@types/vscode": "^1.56.0",
        "@types/node": "^12.11.7",
        "eslint": "^7.19.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "typescript": "^4.1.3",
        "ts-loader": "^8.0.14",
        "webpack": "^5.19.0"
    },
    "dependencies": {
        "@kieler/keith-sprotty": "0.1.0",
        "sprotty-vscode": "^0.1.3",
        "sprotty-vscode-webview": "^0.1.2",
        "vscode-languageclient": "^6.1.4"
    }
}
