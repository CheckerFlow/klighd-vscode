{
  "name": "theia-sccharts-extension",
  "version": "0.1.0",
  "description": "An extension for Theia connection language support for SCCharts",
  "author": "Project Theia",
  "license": "Apache-2.0",
  "keywords": [
    "theia-extension"
  ],
  "akjfhdependencies": {
    "@theia/core": "latest",
    "@theia/editor": "latest",
    "@theia/filesystem": "latest",
    "@theia/languages": "latest",
    "@theia/monaco": "latest",
    "@types/node": "^8.0.14",
    "inversify": "^4.13.0",
    "perfect-scrollbar": "^1.4.0",
    "vscode-jsonrpc": "^3.6.2"
  },
  "scripts": {
    "prepare": "yarn run clean && yarn run build",
    "clean": "rimraf lib \"node_modules/!(rimraf|.bin)\"",
    "lint": "tslint -c ../tslint.json --project ./tsconfig.json",
    "build": "tsc",
    "watch": "tsc -w",
    "test": "mocha --opts ./mocha.opts"
  },
  "devDependencies": {
    "@types/chai": "^4.0.1",
    "@types/chai-as-promised": "0.0.31",
    "@types/mocha": "^2.2.41",
    "mocha": "^3.4.2",
    "ts-node": "^3.2.0",
    "typescript": "^2.5.2"
  },
  "devDepOld" : {
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "nyc": "^11.0.3",
    "rimraf": "^2.6.1",
    "tslint": "^5.5.0"

  },
  "files": [
    "lib",
    "src",
    "build"
  ],
  "theiaExtensions": [
    {
      "frontend": "lib/frontend/language/frontend-extension",
      "backend": "lib/backend/backend-extension"
    }
  ]
}
